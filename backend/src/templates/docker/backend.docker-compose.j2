services:
  database:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: ${project_name}
      POSTGRES_INITDB_ARGS: "-E UTF8 --locale=es_AR.UTF-8"
    ports:
      - "5433:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - backend

  backend:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: backend
    environment:
        PYTHONPATH: /app
    env_file:
      - .env
    networks:
      - backend
    ports:
      - "8000:8000"
    depends_on:
      - database
    volumes:
      - ./src:/app/src
    command:
      - uvicorn
      - src.main:app
      - --host
      - 0.0.0.0
      - --port
      - "8000"
      - --reload

networks:
  backend:
    driver: bridge

volumes:
  postgres_data:
    driver: local
